{
  "name": "vscode-simple-ext",
  "displayName": "VSCode Simple Extension",
  "private": true,
  "description": "Simple VSCode Extension as part of a mono-repo ",
  "version": "0.1.0",
  "publisher": "SAPOSS",
  "icon": "resources/icon/icon.png",
  "keywords": [],
  "categories": [],
  "license": "CC-BY-4.0",
  "main": "./lib/src/extension",
  "activationEvents": [
    "*"
  ],
  "contributes": {},
  "repository": "https://github.com/sap-samples/ecmascript_mono_repo_template",
  "engines": {
    "vscode": "^1.49.0"
  },
  "scripts": {
    "ci": "npm-run-all clean lint compile bundle package",
    "clean": "rimraf ./dist ./lib *.vsix",
    "lint": "eslint . --ext .ts --max-warnings=0 --ignore-path=../../.gitignore",
    "compile": "tsc",
    "bundle": "webpack --mode production",
    "package": "vsce package --yarn"
  },
  "dependencies": {
    "@ecmascript_mono_repo_template/npm_package_javascript_library": "0.1.0",
    "@ecmascript_mono_repo_template/npm_package_typescript_library": "0.1.0"
  },
  "devDependencies": {
    "@types/vscode": "1.49.0",
    "proxyquire": "2.1.3",
    "vsce": "1.79.5"
  }
}
